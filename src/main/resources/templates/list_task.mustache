<!DOCTYPE HTML>
<html xmlns:th="http://www.thymeleaf.org">
    <head>
        <title>Task List</title>

       <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

        <style type="text/css">
  

            .fab{
                position: fixed;
                bottom:10px;
                right:10px;
            }
            
            .fab button{
                cursor: pointer;
                width: 48px;
                height: 48px;
                border-radius: 30px;
                background-color: #008040;
                border: none;
                box-shadow: 0 1px 5px rgba(0,0,0,.4);
                font-size: 40px;
                color: white;

                -webkit-transition: .2s ease-out;
                -moz-transition: .2s ease-out;
                transition: .2s ease-out;
            }
            
            .fab button.main{
                padding: 0px;
                position: absolute;
                width: 60px;
                height: 60px;
                border-radius: 30px;
                background-color: #008040;
                right: 0;
                bottom: 0;
                z-index: 20;
            }
            
            </style>
    </head>
    <body style="text-align: center;padding-top: 50px;">

        <h2>Task List</h2>

        <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>TASK</th>
                <th>CATEGORY</th>
                <th>STATUS</th>
                <th>OPTIONS</th>
              </tr>
            </thead>
            <tbody>

            {{#taskList}}

              <tr>
                <td>{{id}}</td>
                <td>{{description}}</td>
                <td>{{category}}</td>
                <td id="taskstatus{{id}}">{{status}}</td>

                <script>
                    var teste = document.getElementById("taskstatus{{id}}").textContent;
                    if (teste==0) {
                        document.getElementById("taskstatus{{id}}").innerHTML = "Pending";
                    }else{
                        document.getElementById("taskstatus{{id}}").innerHTML = "Completed";
                    }
                </script>

                <td>
                    
                    <a href="#" style="margin: 20px;" title="Edit"><i class="fa fa-pencil fa-fw"></i></a>
                    <a href="#" style="margin: 20px;" title="Delete"><i class="fa fa-trash fa-fw" style="color: red;"></i></a>
                    <a href="#" style="margin: 20px;" title="Check Completed"><i class="fa fa-check fa-fw" style="color: green;"></i></a>
                    
                </td>
              </tr>

            {{/taskList}}

            </tbody>
        </table>

        <div class="fab">
            <button class="main">
                <a href="../task/new-task" style="color:white; text-decoration: none;" >
                    +
                </a>
            </button>
        </div>
        
    </body>
</html>