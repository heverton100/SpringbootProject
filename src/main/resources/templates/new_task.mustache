<!DOCTYPE HTML>
<html xmlns:th="http://www.thymeleaf.org">
    <head>
        <title>New Task</title>

       <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>


    </head>
    <body style="text-align: center;padding-top: 50px;">

        <h2>New Task</h2>

        <form class="form-horizontal" method="post" action="../task/add" style="text-align: -webkit-center;">
        
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="Description"></label>  
                <div class="col-md-5">
                    <input id="description" name="description" type="text" placeholder="Description" class="form-control input-md">
                </div>
            </div>
            <br>
            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="category">Category</label>
                <div class="col-md-5">
                    <select id="category" name="category" class="form-control">
                        <option value="Option one">Option one</option>
                        <option value="Option two">Option two</option>
                        <option value="Option three">Option three</option>
                    </select>
                </div>
            </div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-5 control-label" for="button"></label>
                <div class="col-md-5">
                    <button id="button" type="submit" name="button" class="btn btn-success">Submit</button>
                </div>
            </div>
            
        </form>

        <!-- Button -->
        <div class="form-group" style="text-align: -webkit-center;">
            <label class="col-md-5 control-label" for="button"></label>
            <div class="col-md-5">

                <button type="button" class="btn btn-primary">
                    <a href="../task/list-task" style="color:white; text-decoration: none;" >Back</a>
                </button>

            </div>
        </div>
        
    </body>
</html>